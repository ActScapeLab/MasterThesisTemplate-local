\makeatletter

\newcommand{\articletype}[1]{\def\@articletype{#1}} % 修士論文か学士論文か
\newcommand{\seireki}[1]{\def\@seireki{#1}} % 西暦での年度
\newcommand{\StudentGrade}[1]{\def\@StudentGrade{#1}} % 学年
\newcommand{\StudentIdNumber}[1]{\def\@StudentIdNumber{#1}} % 学籍番号
\newcommand{\departmentname}[1]{\def\@departmentname{#1}} % 学科名
\newcommand{\labname}[1]{\def\@labname{#1}} % 研究室名
\renewcommand{\title}[1]{\def\@title{#1}} % タイトル
\renewcommand{\author}[1]{\def\@author{#1}} % 著者名
\renewcommand{\date}[1]{\def\@date{#1}} % 日付


\renewcommand{\maketitle}{
  \begin{titlepage}
    \let\footnotesize\small
    \let\footnoterule\relax
    \let\footnote\thanks
    \null\vfil
    \vskip 20\p@
    \begin{center}
      {\Large {\@seireki}年度　{\@articletype} \par}
      {\vskip 12em}
      {\LARGE {\@title} \par}
      {\vskip 15em}
      {\large {芝浦工業大学{\@departmentname}\\{\@labname}} \par}
      {\vskip 5em}
      {\large {\@StudentGrade} \par}
      {\large {学籍番号} {\@StudentIdNumber} \par}
      {\vskip 1.5em}
      {\Large {\@author} \par}
      {\vskip 1.5em}
      {\large \@date \par}
    \end{center}
    \par
  \end{titlepage}
}

\makeatother